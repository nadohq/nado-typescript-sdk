{
  "name": "vertex-sdk-monorepo",
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "private": true,
  "scripts": {
    "build": "npx lerna run build",
    "clean": "npx lerna run clean",
    "dev": "npx lerna run dev",
    "gen-typedoc": "npx typedoc",
    "link-local": "./setup-yarn-links.sh",
    "lint": "eslint --cache --fix './**/*.{ts,tsx}' && prettier --write './**/*.{ts,tsx}'",
    "prepare": "husky",
    "publish-all": "yarn clean && yarn build && npx lerna publish --force-publish --no-private",
    "test": "jest",
    "typecheck": "npx lerna run typecheck",
    "unlink-local": "UNLINK=true ./setup-yarn-links.sh",
    "depcruise:all": "depcruise packages/* apps/*"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@types/node": "^22.16.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "dependency-cruiser": "16.10.3",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-file-path-extensions": "^2.1.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "tsx": "4.20.3",
    "typedoc": "^0.28.7",
    "typedoc-plugin-extras": "^4.0.0",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "resolutions": {
    "viem": "2.31.6",
    "axios": "^1.10.0",
    "ts-mixer": "^6.0.4"
  },
  "packageManager": "yarn@1.22.22"
}
