{
  "name": "vertex-sdk-monorepo",
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "private": true,
  "scripts": {
    "build": "npx lerna run build",
    "clean": "npx lerna run clean",
    "dev": "npx lerna run dev",
    "gen-typedoc": "npx typedoc",
    "link-local": "./setup-yarn-links.sh",
    "lint": "eslint './**/*.{ts,tsx}' --fix && prettier --write './**/*.{ts,tsx}'",
    "prepare": "husky",
    "publish-all": "yarn build && npx lerna publish --force-publish --no-private",
    "test": "jest",
    "unlink-local": "UNLINK=true ./setup-yarn-links.sh"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.7",
    "lint-staged": "^15.2.7",
    "prettier": "^3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.26.5",
    "typedoc-plugin-extras": "^3.1.0",
    "typedoc-plugin-missing-exports": "^3.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.16.0"
  },
  "resolutions": {
    "viem": "2.23.14",
    "axios": "^1.7.2",
    "ts-mixer": "^6.0.4"
  },
  "packageManager": "yarn@1.22.22"
}
